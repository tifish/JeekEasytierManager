<Window
    x:Class="JeekEasytierManager.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeekEasytierManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="1250"
    Height="800"
    MinWidth="680"
    MinHeight="480"
    d:DesignHeight="480"
    d:DesignWidth="680"
    x:DataType="local:MainViewModel"
    Icon="App.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="20" RowDefinitions="Auto,*">

        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Spacing="20">

            <!--  Configs  -->
            <Border Classes="Card">
                <StackPanel Orientation="Vertical" Spacing="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Classes="Title" Text="📝" />
                        <Label Classes="Title" Content="Configs" />
                    </StackPanel>

                    <local:ConfigListControl Configs="{Binding Configs}" EditCommand="{Binding EditConfigCommand}" />
                </StackPanel>
            </Border>

            <StackPanel
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Vertical"
                Spacing="10">

                <!--  Service  -->
                <Border Classes="Card">
                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Vertical"
                        Spacing="10">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Title" Text="⚙️" />
                            <Label Classes="Title" Content="Service" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button
                                Classes="Blue"
                                Command="{Binding InstallServiceCommand}"
                                Content="Install" />
                            <Button
                                Classes="Gray"
                                Command="{Binding UninstallServiceCommand}"
                                Content="Uninstall" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button
                                Classes="Green"
                                Command="{Binding StartServiceCommand}"
                                Content="(Re)start" />
                            <Button
                                Classes="Red"
                                Command="{Binding StopServiceCommand}"
                                Content="Stop" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Update  -->
                <Border Classes="Card">
                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Vertical"
                        Spacing="10">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="Title" Text="🔃" />
                            <Label Classes="Title" Content="Update" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Spacing="10">
                            <Label
                                Content="Easytier is not installed"
                                Foreground="Red"
                                IsVisible="{Binding !HasEasytier}" />
                            <Button
                                Classes="Gray"
                                Command="{Binding UpdateEasytierCommand}"
                                Content="Update Easytier" />
                            <Button Command="{Binding UpdateMeCommand}" Content="Update Me" />
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>

        </StackPanel>

        <!--  Info  -->
        <Border
            Grid.Row="1"
            Margin="0,10,0,0"
            Classes="Card">

            <Grid RowDefinitions="Auto,Auto,*">

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Classes="Title" Text="📊" />
                    <Label Classes="Title" Content="Info" />
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Orientation="Horizontal"
                    Spacing="10">

                    <Button
                        Classes="Brown"
                        Command="{Binding ShowPeersCommand}"
                        Content="Show peers" />
                    <Button
                        Classes="Yellow"
                        Command="{Binding ShowRouteCommand}"
                        Content="Show route" />
                </StackPanel>

                <ScrollViewer
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    HorizontalScrollBarVisibility="Visible">

                    <TextBlock
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        FontFamily="Consolas, 'Courier New', monospace"
                        Text="{Binding Messages}"
                        TextWrapping="Wrap" />

                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>

</Window>
