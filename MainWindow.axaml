<Window
    x:Class="JeekEasytierManager.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeekEasytierManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="1250"
    Height="730"
    MinWidth="750"
    MinHeight="460"
    d:DesignHeight="460"
    d:DesignWidth="650"
    x:DataType="local:MainViewModel"
    Icon="App.ico"
    mc:Ignorable="d">

    <Grid Margin="20" RowDefinitions="Auto,*">

        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Spacing="20">

            <!--  Configs  -->
            <StackPanel Orientation="Vertical" Spacing="10">

                <Label
                    Content="Configs"
                    FontSize="20"
                    FontWeight="Bold" />

                <local:ConfigListControl Configs="{Binding Configs}" EditCommand="{Binding EditConfigCommand}" />

            </StackPanel>

            <StackPanel
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Vertical"
                Spacing="10">

                <!--  Service  -->
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Vertical"
                    Spacing="10">

                    <Label
                        Content="Service"
                        FontSize="20"
                        FontWeight="Bold" />

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Command="{Binding InstallServiceCommand}" Content="Install" />
                        <Button Command="{Binding UninstallServiceCommand}" Content="Uninstall" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Command="{Binding StartServiceCommand}" Content="(Re)start" />
                        <Button Command="{Binding StopServiceCommand}" Content="Stop" />
                    </StackPanel>
                </StackPanel>

                <!--  Update  -->
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Vertical"
                    Spacing="10">

                    <Label
                        Content="Update"
                        FontSize="20"
                        FontWeight="Bold" />

                    <StackPanel Orientation="Vertical" Spacing="10">
                        <Label
                            Content="Easytier is not installed"
                            Foreground="Red"
                            IsVisible="{Binding !HasEasytier}" />
                        <Button Command="{Binding UpdateEasytierCommand}" Content="Update Easytier" />
                        <Button Command="{Binding UpdateJeekEasytierManagerCommand}" Content="Update JeekEasytierManager" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>

        </StackPanel>

        <!--  Info  -->
        <Grid
            Grid.Row="1"
            Margin="0,10,0,0"
            RowDefinitions="Auto,Auto,*">

            <Label
                Grid.Row="0"
                Content="Info"
                FontSize="20"
                FontWeight="Bold" />

            <StackPanel
                Grid.Row="1"
                Margin="0,10,0,0"
                Orientation="Horizontal"
                Spacing="10">

                <Button Command="{Binding ShowPeersCommand}" Content="Show peers" />
                <Button Command="{Binding ShowRouteCommand}" Content="Show route" />
            </StackPanel>

            <ScrollViewer
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalScrollBarVisibility="Visible">

                <TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    FontFamily="Consolas, 'Courier New', monospace"
                    Text="{Binding Messages}"
                    TextWrapping="Wrap" />

            </ScrollViewer>
        </Grid>

    </Grid>

</Window>
