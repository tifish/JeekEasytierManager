    </Style>

    <!--  Brown button  -->
    <Style Selector="Button.Brown">
        <Setter Property="Background" Value="{StaticResource Brown}" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style Selector="Button.Brown:pointerover /template/ ContentPresenter">
