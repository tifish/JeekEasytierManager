<UserControl
    x:Class="JeekEasytierManager.MainWindowInfo"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:JeekEasytierManager"
    x:DataType="local:MainViewModel">
    <Border Margin="0,10,0,0" Classes="Card">
        <Grid RowDefinitions="Auto,Auto,*">

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Classes="Title" Text="ðŸ“Š" />
                <Label Classes="Title" Content="Info" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Margin="0,10,0,0"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Classes="Brown MinWidth"
                    Command="{Binding ShowPeersCommand}"
                    Content="Show peers" />
                <Button
                    Classes="Yellow MinWidth"
                    Command="{Binding ShowRouteCommand}"
                    Content="Show route" />
            </StackPanel>

            <ScrollViewer
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalScrollBarVisibility="Visible">
                <TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    FontFamily="Consolas, 'Courier New', monospace"
                    Text="{Binding Messages}"
                    TextWrapping="Wrap" />
            </ScrollViewer>

        </Grid>
    </Border>
</UserControl>
