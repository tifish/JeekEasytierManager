<UserControl
    x:Class="JeekEasytierManager.MainWindowConfigs"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:JeekEasytierManager"
    x:DataType="local:MainViewModel">

    <Border Classes="Card">
        <StackPanel Orientation="Vertical" Spacing="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Classes="Title" Text="📝" />
                <Label Classes="Title" Content="Configs" />
            </StackPanel>
            <local:ConfigListControl
                Configs="{Binding Configs}"
                DeleteCommand="{Binding DeleteConfig}"
                EditCommand="{Binding EditConfig}"
                EditFileCommand="{Binding EditConfigFile}"
                RenameCommand="{Binding RenameConfig}" />
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Classes="Red"
                    Command="{Binding SyncConfigs}"
                    Content="Sync" />
                <Button
                    Classes="Blue"
                    Command="{Binding EditSelectedConfigs}"
                    Content="Edit selected" />
                <Button
                    Classes="Yellow"
                    Command="{Binding RefreshConfigs}"
                    Content="Refresh" />
                <Button
                    Classes="Green"
                    Command="{Binding AddConfig}"
                    Content="Add" />
            </StackPanel>
        </StackPanel>
    </Border>

</UserControl>
