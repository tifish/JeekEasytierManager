<Window
    x:Class="JeekEasytierManager.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
    xmlns:local="clr-namespace:JeekEasytierManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Jeek Easytier Manager"
    Width="1250"
    Height="800"
    MinWidth="680"
    MinHeight="480"
    d:DesignHeight="480"
    d:DesignWidth="680"
    x:DataType="local:MainViewModel"
    Icon="avares://JeekEasytierManager/App.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <dialogHost:DialogHost
        dialogHost:DialogHostStyle.CornerRadius="8"
        DialogMargin="16"
        IsOpen="{Binding RenameConfigDialogIsOpen}">

        <dialogHost:DialogHost.DialogContent>
            <StackPanel Width="250" Spacing="15">
                <TextBlock FontSize="18" Text="Rename config:" />

                <TextBox
                    Loaded="DialogTextBox_Loaded"
                    Text="{Binding RenameConfigDialogText}"
                    Watermark="Enter new name here...">
                    <TextBox.KeyBindings>
                        <KeyBinding Command="{Binding RenameConfigDialogSaveCommand}" Gesture="Enter" />
                        <KeyBinding Command="{Binding RenameConfigDialogCancelCommand}" Gesture="Escape" />
                    </TextBox.KeyBindings>
                </TextBox>

                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="10">
                    <Button
                        Classes="Secondary"
                        Command="{Binding RenameConfigDialogCancelCommand}"
                        Content="Cancel" />
                    <Button
                        Classes="Primary"
                        Command="{Binding RenameConfigDialogSaveCommand}"
                        Content="Save" />
                </StackPanel>
            </StackPanel>
        </dialogHost:DialogHost.DialogContent>
        <!--  put the content over which the dialog is shown here (e.g. your main window grid)  -->

        <dialogHost:DialogHost
            dialogHost:DialogHostStyle.CornerRadius="8"
            DialogMargin="16"
            IsOpen="{Binding AddConfigDialogIsOpen}">

            <dialogHost:DialogHost.DialogContent>
                <StackPanel Width="250" Spacing="15">
                    <TextBlock FontSize="18" Text="Add config:" />

                    <TextBox
                        Loaded="DialogTextBox_Loaded"
                        Text="{Binding AddConfigDialogText}"
                        Watermark="Enter new name here...">
                        <TextBox.KeyBindings>
                            <KeyBinding Command="{Binding AddConfigDialogAddCommand}" Gesture="Enter" />
                            <KeyBinding Command="{Binding AddConfigDialogCancelCommand}" Gesture="Escape" />
                        </TextBox.KeyBindings>
                    </TextBox>

                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Button
                            Classes="Secondary"
                            Command="{Binding AddConfigDialogCancelCommand}"
                            Content="Cancel" />
                        <Button
                            Classes="Primary"
                            Command="{Binding AddConfigDialogAddCommand}"
                            Content="Save" />
                    </StackPanel>
                </StackPanel>
            </dialogHost:DialogHost.DialogContent>
            <!--  put the content over which the dialog is shown here (e.g. your main window grid)  -->

            <Grid Margin="20" RowDefinitions="Auto,*">

                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="20">

                    <!--  Configs  -->
                    <Border Classes="Card">
                        <StackPanel Orientation="Vertical" Spacing="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Classes="Title" Text="📝" />
                                <Label Classes="Title" Content="Configs" />
                            </StackPanel>

                            <local:ConfigListControl
                                Configs="{Binding Configs}"
                                DeleteCommand="{Binding DeleteConfigCommand}"
                                EditCommand="{Binding EditConfigCommand}"
                                RenameCommand="{Binding RenameConfigCommand}" />

                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="10">

                                <Button
                                    Classes="Blue"
                                    Command="{Binding EditSelectedConfigCommand}"
                                    Content="Edit selected" />
                                <Button
                                    Classes="Green"
                                    Command="{Binding AddConfigCommand}"
                                    Content="Add" />

                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Vertical"
                        Spacing="10">

                        <!--  Service  -->
                        <Border Classes="Card">
                            <StackPanel
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Vertical"
                                Spacing="10">

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Classes="Title" Text="🔧" />
                                    <Label Classes="Title" Content="Service" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button
                                        Classes="Blue MinWidth"
                                        Command="{Binding InstallServiceCommand}"
                                        Content="Install" />
                                    <Button
                                        Classes="Gray MinWidth"
                                        Command="{Binding UninstallServiceCommand}"
                                        Content="Uninstall" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button
                                        Classes="Green MinWidth"
                                        Command="{Binding RestartServiceCommand}"
                                        Content="(Re)start" />
                                    <Button
                                        Classes="Red MinWidth"
                                        Command="{Binding StopServiceCommand}"
                                        Content="Stop" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!--  Update  -->
                        <Border Classes="Card">
                            <StackPanel
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Vertical"
                                Spacing="10">

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Classes="Title" Text="🔃" />
                                    <Label Classes="Title" Content="Update" />
                                </StackPanel>

                                <StackPanel Orientation="Vertical" Spacing="10">
                                    <Label
                                        Content="Easytier is not installed"
                                        Foreground="Red"
                                        IsVisible="{Binding !HasEasytier}" />
                                    <Button
                                        Classes="Gray MinWidth"
                                        Command="{Binding UpdateEasytierCommand}"
                                        Content="Update Easytier" />
                                    <Button
                                        Classes="Gray MinWidth"
                                        Command="{Binding UpdateMeCommand}"
                                        Content="Update Me" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!--  Settings  -->
                    <Border Classes="Card">
                        <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Orientation="Vertical"
                            Spacing="10">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Classes="Title" Text="⚙️" />
                                <Label Classes="Title" Content="Settings" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical" Spacing="10">
                                <Button
                                    Classes="Gray MinWidth"
                                    Command="{Binding SwitchThemeCommand}"
                                    Content="Switch theme" />

                                <ToggleSwitch Content="Start on boot" IsChecked="{Binding StartOnBoot}" />
                                <ToggleSwitch Content="Auto update easytier" IsChecked="{Binding AutoUpdateEasytier}" />
                                <ToggleSwitch Content="Auto update me" IsChecked="{Binding AutoUpdateMe}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <!--  Info  -->
                <Border
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Classes="Card">

                    <Grid RowDefinitions="Auto,Auto,*">

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Classes="Title" Text="📊" />
                            <Label Classes="Title" Content="Info" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            Orientation="Horizontal"
                            Spacing="10">

                            <Button
                                Classes="Brown MinWidth"
                                Command="{Binding ShowPeersCommand}"
                                Content="Show peers" />
                            <Button
                                Classes="Yellow MinWidth"
                                Command="{Binding ShowRouteCommand}"
                                Content="Show route" />
                        </StackPanel>

                        <ScrollViewer
                            Grid.Row="2"
                            Margin="0,10,0,0"
                            HorizontalScrollBarVisibility="Visible">

                            <TextBlock
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                FontFamily="Consolas, 'Courier New', monospace"
                                Text="{Binding Messages}"
                                TextWrapping="Wrap" />

                        </ScrollViewer>
                    </Grid>
                </Border>

            </Grid>

        </dialogHost:DialogHost>
    </dialogHost:DialogHost>

</Window>
